RewriteEngine On

# Allow existing files and directories through
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route /order/SLUG/MATID to order.php
# Example: /order/banner/5 â†’ order.php?product=banner&mat_id=5
# RewriteRule ^order/([^/]+)/([0-9]+)/?$ order.php?product=$1&cat_id=$2 [L,QSA]
RewriteRule ^order/(digital|large|mixed)/([^/]+)/([0-9]+)/?$ order.php?type=$1&slug=$2&cat_id=$3 [L,QSA]

# Optional: automatically add .php extension if file exists
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L,QSA]
