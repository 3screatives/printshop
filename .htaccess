RewriteEngine On

# Allow existing files and directories through
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route /order/TYPE to order.php?type=TYPE
RewriteRule ^order/([^/]+)/?$ order.php?type=$1 [L,QSA]

# Automatically add .php extension if file exists
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L,QSA]